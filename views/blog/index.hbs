<main class="PRIMER-REMOVE-ME">
  <div class='py-6 py-md-7 py-lg-8 subtron'>
    <div class='container-lg p-responsive'>
      <h1 class="f00-light">{{localized.blog.title}}</h1>
      <p class="lead mb-3">
        {{localized.blog.description}}
      </p>
    </div>
  </div>

  <div class='py-7 py-md-8 py-lg-9'>
    <div class='container-lg p-responsive'>
      <ul class="posts-list blog-index">
        {{#each posts}}
            <li class="mb-3 mb-md-4 mb-lg-6">
              <a href="{{this.href}}" class="f1-light blog-index-link mr-2">
                {{{this.title}}}
              </a>

              {{> blog_byline post=this}}
              {{{this.excerpt}}}
              <p><a href="{{this.href}}">Read More&nbsp;<span class="octicon octicon-arrow-small-right"></span></a></p>
            </li>
        {{/each}}
      </ul>
    </div>
  </div>
</main>
